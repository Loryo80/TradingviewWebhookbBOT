# MetaTrader5 settings
MT5_USERNAME=your_username
MT5_PASSWORD=your_password
MT5_SERVER=your_server

# Webhook settings
WEBHOOK_PASSPHRASE=your_webhook_passphrase
WEBHOOK_ENDPOINT=/webhook
WEBHOOK_PORT=5000
WEBHOOK_HOST=0.0.0.0

# Notification settings
DISCORD_WEBHOOK_URL=your_discord_webhook_url
ENABLE_NOTIFICATIONS=True

# Scheduler settings
SCHEDULER_INTERVAL_SECONDS=15
ENABLE_SCHEDULER=True

# Trading settings
RISK_PERCENTAGE=1.0
REWARD_PERCENTAGE=2.0
ATR_PERIOD=14
ATR_MULTIPLIER=2.0
MAX_DAILY_LOSS_PERCENTAGE=5.0
ALLOW_WEEKEND_TRADING=False
TRADING_HOURS_START=00:00
TRADING_HOURS_END=23:59

# Logging settings
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Advanced position management
ENABLE_BREAKEVEN=True
BREAKEVEN_TRIGGER_PERCENTAGE=0.5
ENABLE_TRAILING_STOP=False
TRAILING_STOP_TRIGGER_PERCENTAGE=0.7
TRAILING_STOP_STEP_PERCENTAGE=0.2